<div class="rounded border p-3 m-3">
    <div class="mb-3">
        <label class="fw-bold">Title</label>
        <p class="rounded border border-light p-2"><%= @post.title %></p>
    </div>

    <div class="mb-3">
    <label class="fw-bold">Content</label>
    <p class="rounded border border-light p-2"><%= @post.content %></p>
    </div>

    <div class="mb-3">
    <label class="fw-bold">Deadline</label>
    <p class="rounded border border-light p-2"><%= @post.deadline.to_date if @post.deadline.present? %></p>
    </div>
</div>

<div class="d-flex justify-content-end">
    <%= link_to("Edit", "/posts/#{@post.id}/edit", class: "btn btn-sm btn-success border me-3") %>
    <%= link_to("Delete", "/posts/#{@post.id}/destroy", data: { turbo_method: :post, turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-danger border me-3") %>
</div>
