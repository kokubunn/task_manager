<%= form_tag("/posts/#{@post.id}/update", method: "post") do %>
  <div class="rounded border p-3 m-3">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="title" value="<%= @post.title %>" class="form-control">
    </div>
    <div class="mb-3">
      <label for="content" class="form-label">Content</label>
      <textarea name="content" class="form-control"><%= @post.content %></textarea>
    </div>
    <div class="mb-3">
      <label for="deadline" class="form-label">Deadline</label>
      <input type="date" name="deadline" value="<%= @post.deadline %>" class="form-control">
    </div>
  </div>

  <div class="d-flex justify-content-end mb-3">
    <input type="submit" value="Update" class="btn btn-success border me-3">
  </div>
<% end %>

