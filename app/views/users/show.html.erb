<div class="rounded border p-3 m-3">
    <div class="mb-3">
        <label class="fw-bold">Name</label>
        <p class="rounded border border-light p-2"><%= @user.name %></p>
    </div>

    <div class="mb-3">
        <label class="fw-bold">Email</label>
        <p class="rounded border border-light p-2"><%= @user.email %></p>
    </div>
</div>

<div class="d-flex justify-content-end">
    <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-success border me-3" %>
    <%= link_to 'delete', user_path(@user), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-danger border me-3" %>
</div>

